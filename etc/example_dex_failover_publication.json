{
"publication_": {
   "_comment_":"Usually publications should use this publisher. Extra arguments is number of threads and queue_size.",
   "name":"DEX publishing with failover to a ftp server for later distribution",
   "class":"baltrad.exchange.net.publishers.standard_publisher",
   "extra_arguments": {
  	 "threads":1,
  	 "queue_size":50
   },
   "active":false,
   "connection":{
     "_comment_":"This is a connection used when publishing files to a dex server",
     "class":"baltrad.exchange.net.connections.failover_connection",
     "arguments":{
       "senders":[
         { "class":"baltrad.exchange.net.senders.dex_sender",
           "arguments": {
             "address":"http://localhost:8080",
             "crypto":{
               "sign":true,
               "libname":"keyczar",
               "nodename":"anders-nzxt",
               "privatekey":"/opt/baltrad2/etc/bltnode-keys/anders-nzxt.priv"
             }         
           }
         },
         { "class":"baltrad.exchange.net.adaptors.ftp_sender",
           "arguments": {
             "uri":"ftp://sftpuploader:secret@localhost/tmp/dex_failover/${_bdb/source:NOD}_${/what/object}.tolower()_${/what/date}T${/what/time}Z_${/dataset1/where/elangle}.replace('.','_').h5",
             "create_missing_directories":true
           }
         }
       ]
     }
   },
   "filter":{
  	 "filter_type": "and_filter", 
  	 "value": [
  	   {"filter_type": "attribute_filter", 
  	    "name": "_bdb/source_name", 
        "operation": "in", 
        "value_type": "string", 
        "value": ["sehem","seang"]}, 
  	   {"filter_type": "attribute_filter", 
        "name": "/what/object", 
        "operation": "=", 
        "value_type": "string", 
        "value": ["SCAN"]}
    ]
  },
  "decorators":[
  ]
}
}
