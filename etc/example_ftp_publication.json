{
"publication": {
   "_comment_":"Usually publications should use this publisher. Extra arguments is number of threads and queue_size.",
   "name":"SFTP file to remote server",
   "class":"baltrad.exchange.net.publishers.standard_publisher",
   "extra_arguments": {
  	 "threads":1,
  	 "queue_size":50
   },
   "active":true,
   "connection":{
     "_comment_":"This is a connection used when publishing files using ftp",
     "class":"baltrad.exchange.net.publishers.uri_connection",
     "arguments":{
       "primary": {
         "uri":"ftp://sftpuploader:secret@localhost/tmp/primary_ftp/${_baltrad/datetime:%Y/%m/%d/%H/%M}.interval_l(15)/${_bdb/source:NOD}_${/what/object}.tolower()_${/what/date}T${/what/time}Z_${/dataset1/where/elangle}.replace('.','_').h5",
         "create_missing_directories":true
       },
       "_secondary": {
         "uri":"ftp://sftpuploader:secret@localhost/tmp/secondary_ftp/${_baltrad/datetime:%Y/%m/%d/%H/%M}.interval_l(15)/${_bdb/source:NOD}_${/what/object}.tolower()_${/what/date}T${/what/time}Z_${/dataset1/where/elangle}.replace('.','_').h5",
         "create_missing_directories":false,
         "failover":true
       }
     }
   },
   "filter":{
  	 "filter_type": "and_filter", 
  	 "value": [
  	   {"filter_type": "attribute_filter", 
  	    "name": "_bdb/source_name", 
        "operation": "in", 
        "value_type": "string", 
        "value": ["sehem","seang"]}, 
  	   {"filter_type": "attribute_filter", 
        "name": "/what/object", 
        "operation": "=", 
        "value_type": "string", 
        "value": ["SCAN"]}
    ]
  },
  "decorators":[
    { "decorator":"rave_be_decorator.keep_quantities_decorator",
      "arguments":[
      	["DBZH", "VRADH", "TH"]
      ]
    }
  ]
}
}
